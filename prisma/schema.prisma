generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reservas {
  id     Int      @id @default(autoincrement())
  title  String
  dia    String
  hora   String
  mes    String
  decada Int
  price  Float
  type   String
  ventas Ventas[] @relation("ReservasToVentas")
}

model Ventas {
  id       Int        @id @default(autoincrement())
  nombre   String
  cel      String
  reservas Reservas[] @relation("ReservasToVentas")
}
